<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        android:layout_marginVertical="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            
            <Button
                android:id="@+id/netflixBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_netflix"
                android:onClick="onServiceClick"
                />

            <Button
                android:id="@+id/disneyBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_disney_plus"
                android:layout_marginHorizontal="20dp"
                android:onClick="onServiceClick"
                />

            <Button
                android:id="@+id/appleBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_apple_tv_plus"
                android:onClick="onServiceClick"
                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp">

            <Button
                android:id="@+id/huluBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_hulu"
                android:onClick="onServiceClick"
                />

            <Button
                android:id="@+id/amazonBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_amazon_prime"
                android:layout_marginHorizontal="20dp"
                android:onClick="onServiceClick"
                />

            <Button
                android:id="@+id/hboBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_hbo_max"
                android:onClick="onServiceClick"/>

        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>